{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "./src",
     "paths": {
      "*": ["*"],
    },
     "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "noImplicitAny": true,
     "strictNullChecks": true
  },
  "include": [
    "src", "public", "custom.d.ts"
  ],
   "exclude": ["node_modules"]
}
